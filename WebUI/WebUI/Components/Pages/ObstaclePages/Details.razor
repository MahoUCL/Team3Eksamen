@page "/obstacles/details"
@inject WebUI.Data.DataContext DB
@    using WebUI.Entity
@inject NavigationManager NavigationManager
@    using Microsoft.EntityFrameworkCore

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h4>Obstacle</h4>
    <hr />
    @if (obstacle is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@obstacle.Name</dd>
        </dl>
        <div>
            <a href="@($"/obstacles/edit?obstacleid={obstacle.ObstacleId}")">Edit</a> |
            <a href="@($"/obstacles")">Back to List</a>
        </div>
    }
</div>

@code {
    Obstacle? obstacle;

    [SupplyParameterFromQuery]
    public int ObstacleId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        obstacle = await DB.Obstacles.FirstOrDefaultAsync(m => m.ObstacleId == ObstacleId);

        if (obstacle is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
