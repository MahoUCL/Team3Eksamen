@page "/grid"
@using Microsoft.AspNetCore.Components.Web

<h3>Banedesigner C#</h3>

<PageTitle>BanedesignerC#</PageTitle>

<style>
    .grid {

        height: 90vh;
        background-image: url('/Bane/image1.jpg');
        background-size: contain;
        border: 1px solid #000;
        background-image: url('Bane/image1.jpg'); 
        aspect-ratio: 15 / 11;
        z-index: -1;
   }

    .cell {
        position: relative;
    }

    .select-button {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        transition: opacity 0.3s;
    }

    .cell:hover .select-button {
        opacity: 0.5;
    }
</style>

<div>

    <Gallery showGallery=false />

   @*  Fills the grid with individual cells and gives them an ID *@
    <table class="grid">
        @for (int i = 0; i < 22; i++)
        {
            <tr>
                @for (int j = 0; j < 38; j++)
                {
                    var cellId = i * 38 + j;
                    <td class="cell">
                        <button class="select-button" @onclick="() => SelectCell(cellId)"></button>
                    </td>
                }
            </tr>
        }
    </table>
</div>

@code {
    private int? selectedCell;

    public void SelectCell(int cellId)
    {

        selectedCell = cellId;
        
    }
}
